---
apiVersion: v1
kind: ConfigMap
metadata:
  name: jupyterhub
  namespace: jupyterhub
data:
  jupyterhub_config.py: "{{ jupyterhub_config }}"
  kube.conf: "{{ kube_conf }}"

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name:  jupyterhub
  namespace: jupyterhub
spec:
  selector:
    matchLabels:
      name: jupyterhub
  replicas: 1
  template:
    metadata:
      labels:
        name:  jupyterhub
    spec:
      tolerations:
      - key: "key"
        operator: "Equal"
        value: "value"
        effect: "NoSchedule"    
      containers:
        - name: jupyterhub
          image:  indigodatacloud/jupyterhub
          env:
            HUB_CONNECT_IP: "{{ ansible_default_ipv4.address }}"
          ports:
          - containerPort: 8000
            name: port0
          - containerPort: 8001
            name: port1
          volumeMounts:
           - name: jupyterhub
             mountPath: /jupyterhub_config.py
             subPath: jupyterhub_config.py
           - name: jupyterhub
             mountPath: /root/.kube/config
             subPath: kube.conf
          livenessProbe:
            httpGet:
              path: /
              port: 8000
              scheme: HTTP
            initialDelaySeconds: 30
            periodSeconds: 20
      volumes:
        - name: jupyterhub
          configMap:
            name: jupyterhub


# Service
---
apiVersion: v1
kind: Service
metadata:
  name: jupyterhub
  namespace: jupyterhub
spec:
  type: NodePort
  ports:
  - name: http
    port: 8000
    nodePort: 38000
  selector:
    name: jupyterhub
